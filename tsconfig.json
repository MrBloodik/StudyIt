{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "paths": {
      "@app/*": ["./src/app/*"],
      "@navigation/*": ["./src/app/navigation/*"],
      "@pages/*": ["./src/pages/*"],
      "@widgets/*": ["./src/widgets/*"],
      "@features/*": ["./src/features/*"],
      "@entities/*": ["./src/entities/*"],
      "@shared/*": ["./src/shared/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
